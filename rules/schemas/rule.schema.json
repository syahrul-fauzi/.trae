{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SBA-Agentic Rule Schema (v2)",
  "type": "object",
  "required": ["metadata", "trigger", "actions"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["id", "name", "version", "priority", "category"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Z]{2,4}-[A-Z]{2,4}-[0-9]{2}$"
        },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "version": { "type": "string" },
        "priority": { "enum": ["low", "medium", "high", "critical"] },
        "category": { "enum": ["BPA", "CX", "DA", "SI"] }
      }
    },
    "trigger": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "enum": ["event", "schedule"] },
        "events": { "type": "array", "items": { "type": "string" } },
        "conditions": { "type": "array", "items": { "type": "string" } },
        "cron": { "type": "string" },
        "timezone": { "type": "string" }
      }
    },
    "parameters": {
      "type": "object",
      "additionalProperties": true
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "priority", "config"],
        "properties": {
          "name": { "type": "string" },
          "type": { "enum": ["internal", "external", "notification", "ai"] },
          "priority": { "type": "number" },
          "config": { "type": "object" },
          "handler": { "type": "string" }
        }
      }
    },
    "errorHandling": {
      "type": "object",
      "properties": {
        "retry": {
          "type": "object",
          "properties": {
            "maxAttempts": { "type": "number" },
            "backoff": { "enum": ["fixed", "exponential"] },
            "delay": { "type": "number" }
          }
        },
        "fallback": {
          "type": "object",
          "properties": {
            "action": { "type": "string" },
            "config": { "type": "object" }
          }
        }
      }
    },
    "observability": {
      "type": "object",
      "properties": {
        "logging": { "enum": ["basic", "detailed", "debug"] },
        "metrics": { "type": "boolean" },
        "tracing": { "type": "boolean" }
      }
    }
  }
}
