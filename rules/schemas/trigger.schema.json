{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SBA-Agentic Trigger Schema",
  "type": "object",
  "properties": {
    "events": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "conditions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "schedule": {
      "type": "string",
      "description": "Cron expression for scheduled rules"
    }
  },
  "oneOf": [
    { "required": ["events"] },
    { "required": ["schedule"] }
  ]
}
